{
	"name": "lavalink-music-bot",
	"version": "1.0.0",
	"main": "dist/index.js",
	"author": "iliveinsideyourwalls",
	"license": "WTFPL",
	"dependencies": {
		"@discordjs/collection": "^0.3.2",
		"@discordjs/rest": "^0.1.0-canary.0",
		"@sapphire/decorators": "^3.1.3",
		"@sapphire/discord-utilities": "^2.2.2",
		"@sapphire/discord.js-utilities": "^4.1.0",
		"@sapphire/fetch": "^2.0.2",
		"@sapphire/framework": "^2.1.3",
		"@sapphire/plugin-api": "^3.0.1",
		"@sapphire/plugin-editable-commands": "^1.0.1",
		"@sapphire/plugin-logger": "^2.0.1",
		"@sapphire/plugin-subcommands": "^2.0.1",
		"@sapphire/time-utilities": "^1.4.6",
		"@sapphire/type": "^2.1.1",
		"@sapphire/utilities": "^3.0.8",
		"@skyra/editable-commands": "^2.1.0",
		"cz-conventional-changelog": "^3.3.0",
		"discord.js": "^13.3.1",
		"dotenv-cra": "^3.0.2",
		"erela.js": "^2.3.3",
		"erela.js-spotify": "^1.2.0",
		"reflect-metadata": "^0.1.13",
		"string-progressbar": "^1.0.4"
	},
	"devDependencies": {
		"@sapphire/prettier-config": "^1.2.3",
		"@sapphire/ts-config": "^3.1.3",
		"@types/node": "^16.11.6",
		"@types/ws": "^8.2.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.4.1",
		"tsc-watch": "^4.5.0",
		"typescript": "^4.4.4"
	},
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"start": "tsc && node dist/index.js",
		"dev": "run-s build start",
		"watch:start": "tsc-watch --onSuccess \"node --inspect ./dist/index.js\"",
		"format": "prettier --write \"src/**/*.ts\""
	},
	"prettier": {
		"$schema": "http://json.schemastore.org/prettierrc",
		"endOfLine": "lf",
		"quoteProps": "as-needed",
		"semi": true,
		"printWidth": 10000,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true,
		"overrides": [
			{
				"files": ".all-contributorsrc",
				"options": {
					"parser": "json"
				}
			},
			{
				"files": "*.yml",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
